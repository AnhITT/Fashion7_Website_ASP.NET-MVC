@model Fashion7.Models.TaiKhoan

@{
    ViewBag.Title = "DangKy";
    Layout = "~/Views/Shared/_LayoutUser.cshtml";
}

<html>
<head>
    <link href="~/Content/css/site.css" rel="stylesheet" />
    <link href="~/Content/frontawsome/css/all.css" rel="stylesheet" />
    <link href="~/Content/frontawsome/css/all.min.css" rel="stylesheet" />
    <script src="~/Content/css/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/Content/frontawsome/js/all.js"></script>
    <script src="~/Content/frontawsome/js/solid.js"></script>
    <link href="~/Content/frontawsome/css/solid.css" rel="stylesheet" />
</head>
<body>
    <section class="vh-100 h-100 bg-image"
             style=" background-color: #000000a6; height: 1000px !important">
        <div class="mask d-flex align-items-center gradient-custom-3">
            <div class="container">
                <div class="row d-flex justify-content-center align-items-center">
                    <div class="col-12 col-md-9 col-lg-7 col-xl-6">
                        <div class="card" style="border-radius: 15px;">
                            <div class="card-body p-5">
                                <h2 class="text-uppercase text-center mb-5">ĐĂNG KÝ TÀI KHOẢN</h2>
                                @using (Html.BeginForm())
                                {
                                    @Html.ValidationSummary(true)
                            <form>

                                <div class="form-outline mb-3">
                                    <span class="text-danger">
                                        @ViewData["Loi1"]
                                    </span>
                                    <div class="form-floating mb-3" for="form2Example17">
                                        <input type="text" name="HoTenKH" class="form-control form-control-lg" id="floatingInput" placeholder="text">
                                        <label for="floatingInput">Họ tên khách hàng</label>
                                    </div>
                                </div>

                                <div class="form-outline mb-3">
                                    <span class="text-danger">
                                        @ViewData["LoiCountTK"]
                                        @ViewData["LoiTrungTK"]
                                    </span>
                                    <div class="form-floating mb-3" for="form2Example17">
                                        <input type="text" name="TenDN" class="form-control form-control-lg" id="floatingInput" placeholder="text">
                                        <label for="floatingInput">Tên đăng nhập</label>
                                    </div>
                                </div>

                                <div class="form-outline mb-3">
                                    <span class="text-danger">
                                        @ViewData["LoiCountMK"]
                                    </span>
                                    <div class="form-floating mb-3" for="form2Example17">
                                        <input type="password" name="MatKhau" class="form-control form-control-lg" id="floatingPassword" placeholder="password">
                                        <label for="floatingInput">Mật khẩu</label>
                                    </div>
                                </div>

                                <div class="form-outline mb-3">
                                    <span class="text-danger">
                                        @ViewData["Loi4"]
                                        @ViewData["LoiTrungMK"]
                                    </span>
                                    <div class="form-floating mb-3" for="form2Example17">
                                        <input type="password" name="MatKhau2" class="form-control form-control-lg" id="floatingPassword" placeholder="password">
                                        <label for="floatingInput">Nhập lại mật khẩu</label>
                                    </div>
                                </div>

                                <div class="form-outline mb-3">
                                    <span class="text-danger">
                                        @ViewData["Loi5"]
                                    </span>
                                    <div class="form-floating mb-3" for="form2Example17">
                                        <input type="text" name="DiaChi" class="form-control form-control-lg" id="floatingInput" placeholder="text">
                                        <label for="floatingInput">Địa chỉ</label>
                                    </div>
                                </div>

                                <div class="form-outline mb-3">
                                    <span class="text-danger">
                                        @ViewData["Loi6"]
                                    </span>
                                    <div class="form-floating mb-3" for="form2Example17">
                                        <input  type="email" name="Email" class="form-control form-control-lg" id="floatingInput" placeholder="text">
                                        <label for="floatingInput typeEmail">Email</label>
                                    </div>
                                </div>
                                <div class="form-outline mb-3">
                                    <span class="text-danger">
                                        @ViewData["Loi7"]
                                    </span>
                                    <div class="form-floating mb-3" for="form2Example17">
                                        <input type="text" name="SDT" class="form-control form-control-lg" id="floatingInput" placeholder="text">
                                        <label for="floatingInput">Số điện thoại</label>
                                    </div>
                                </div>
                                <span class="text-danger">
                                    @ViewData["Loi11"]
                                </span>
                                <div class="mt-1">
                                    Giới tính:
                                    Nam
                                    @Html.RadioButtonFor(model => model.gioiTinh, "Nam", true)
                                    Nữ
                                    @Html.RadioButtonFor(model => model.gioiTinh, "Nữ", false)
                                    Khác
                                    @Html.RadioButtonFor(model => model.gioiTinh, "Khác", null)
                                </div>
                                <div class="form-outline mb-3">
                                    <label class="form-label" for="form3Example4cdg">Ngày sinh</label>
                                    <input type="date" name="NgaySinh" class="form-control form-control-lg" />
                                </div>

                                <div class="d-flex justify-content-center">
                                    <input type="submit" value="Đăng Ký"  <button type="button" class="btn btn-dark btn-block btn-lg gradient-custom-4 ">
                                    </button>
                                </div>

                                <p class="text-center text-muted mt-5 mb-0">
                                    Đã có tài khoản? <a href="~/User/DangNhap"
                                                        class="fw-bold text-body"><u>Đăng nhập ngay</u></a>
                                </p>

                            </form>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

</body>
</html>





