@model Fashion7.Models.TaiKhoan
@{
    ViewBag.Title = "Đổi mật khẩu";
    Layout = "~/Views/Shared/_LayoutUser.cshtml";
}

<html>
<div class="row text-light text-center mt-5 mb-4">
    <link href="~/Content/frontawsome/css/all.css" rel="stylesheet" />
    <link href="~/Content/frontawsome/css/fontawesome.css" rel="stylesheet" />
    <script src="~/Content/frontawsome/js/fontawesome.js"></script>
    <script src="~/Content/frontawsome/js/all.js"></script>
    <h2 style="font-weight:bold !important; font-size:50px;color:black;padding:10px">ĐỔI MẬT KHẨU</h2>

    <section class="vh-100 h-100 bg-image text-black d-flex justify-content-center" style="background-color: white; height:400px!important;">
        <div class="container h-100 py-5">
            <div class="row d-flex justify-content-center align-items-center h-100">
                <div class="col d-flex justify-content-center">
                    <div class="card shopping-cart" style="border-radius: 15px; width:500px!important;">
                        <div class="card-body text-black">
                            @using (Html.BeginForm())
                            {
                                @Html.ValidationSummary(true)

                                <div>
                                    <div class="float-start">Mật khẩu cũ</div>
                                    <input type="password" name="MatKhauCu" class="form-control" placeholder="Nhập mật khẩu cũ">
                                    <span class="text-danger">
                                        @ViewData["Loi1"]
                                    </span>
                                </div>
                                <div class="mt-3">
                                    <div class="float-start">Mật khẩu mới</div>
                                    <input type="password" name="MatKhauMoi1" class="form-control" placeholder="Nhập mật khẩu mới">
                                    <span class="text-danger">
                                        @ViewData["Loi2"]
                                    </span>
                                </div>
                                <div class="mt-3">
                                    <div class="float-start">Nhập lại mật khẩu</div>
                                    <input type="password" name="MatKhauMoi2" class="form-control" placeholder="Nhập lại mật khẩu">
                                    <span class="text-danger">
                                        @ViewData["Loimk2"]
                                    </span>
                                </div>

                                <div class="d-flex justify-content-center align-items-center">
                                    <a class="btn btn-dark" href="../InfoUser"><i class="fa-solid fa-chevron-left"></i> Quay lại</a>
                                    <input type="submit" value="Lưu thông tin" class="btn btn-success m-3" />
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <style>
        body {
            background-color: white !important;
            background-image: none !important;
        }

        a {
            text-decoration: none !important;
        }
    </style>
    }

</html>

