
@{
    ViewBag.Title = "Đăng nhập Admin";
    Layout = null;
}

<html>
<head>
    <link href="~/Content/frontawsome/css/all.css" rel="stylesheet" />
    <link href="~/Content/frontawsome/css/all.min.css" rel="stylesheet" />
    <script src="~/Content/css/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/Content/frontawsome/js/all.js"></script>
    <script src="~/Content/frontawsome/js/solid.js"></script>
    <link href="~/Content/frontawsome/css/solid.css" rel="stylesheet" />
    <link href="~/Content/css/bootstrap/dist/css/bootstrap.css" rel="stylesheet" />
    <link rel="icon" href="@Url.Content("~/favicon.ico")" />
    <link href="~/Content/css/site.css" rel="stylesheet" />

    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:ital,wght@0,100;0,500;0,600;0,700;1,400&display=swap" rel="stylesheet">
    <title>@ViewBag.Title-Fashion7</title>

    <nav class="navbar navbar-expand-lg navbar-dark shadow-lg sticky-lg-top text-white bg-black bg-opacity-75">
        <div class="container-fluid">
            <a class="navbar-brand" href="/Home/Index">f7</a>
    </nav>
</head>
<body>
    <section class="vh-100" style="background-color: #000000a6; height: 656px !important ">
        <div class="container py-3 h-100">
            <div class="row d-flex justify-content-center align-items-center">
                <div class="col col-xl-10">
                    <div class="card" style="border-radius: 1rem;">
                        <div class="row g-0">
                            <div class="col-md-6 col-lg-5 d-none d-md-block">
                                <img src="https://4kwallpapers.com/images/walls/thumbs_2t/8324.png"
                                     alt="login form" class="img-fluid h-100 w-auto" style="border-radius: 1rem 0 0 1rem;" />
                            </div>
                            <div class="col-md-6 col-lg-7 d-flex align-items-center">
                                <div class="card-body p-4 p-lg-5 text-black">
                                    @using (Html.BeginForm())
                                    {
                                        <form>
                                            @Html.ValidationSummary(true)
                                            <div class="d-flex justify-content-center mb-3 pb-1">
                                                <span class="h1 fw-bold mb-0" style="font-family:Lobster">f7</span>
                                            </div>
                                            <h5 class=" mb-3 pb-3 d-flex justify-content-center" style="letter-spacing: 1px;">Đăng nhập quản trị hệ thống</h5>
                                            <span class="text-danger">
                                                @ViewData["nullTK"]
                                                @ViewData["Loi1"]
                                                @ViewData["Loi"]
                                            </span>
                                            <div class="form-floating mb-3" for="form2Example17">
                                                <input type="text" name="TenDN" class="form-control" id="floatingInput" placeholder="text">
                                                <label for="floatingInput">Tài khoản</label>
                                            </div>
                                            <span class="text-danger">
                                                @ViewData["Loi2"]
                                                @ViewData["ThongBao"]
                                            </span>
                                            <div class="form-floating mb-3" for="form2Example17">
                                                <input type="password" name="Matkhau" class="form-control" id="floatingPassword" placeholder="Password">
                                                <label for="floatingPassword">Mật khẩu</label>
                                            </div>
                                            <div class="pt-1 mb-4 d-flex justify-content-center">
                                                <input type="Submit" value="Đăng nhập" <button class="btn btn-dark btn-lg btn-block" type="button"> </button>
                                            </div>
                                            <a class="small text-muted d-flex justify-content-center" href="#!">Quên mật khẩu?</a>

                                        </form>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</body>
</html>