
@model Fashion7.Models.TaiKhoan
@{
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item h5"><a href="../QLTaiKhoanKH"><i class="uil-users-alt"></i> Tài khoản khách hàng</a></li>
            <li class="breadcrumb-item h5">Sửa thông tin tài khoản</li>
        </ol>
    </nav>
    Layout = "~/Areas/Admin/Views/Shared/_LayoutHeaderBar.cshtml";
}

<!DOCTYPE html>

<html>
<head>
  
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.3.1/css/all.css"
          integrity="sha384-mzrmE5qonljUremFsqc01SB46JvROS7bZs3IO2EmfFsd15uHvIt+Y8vEf7N7fWAU" crossorigin="anonymous">
    <meta name="viewport" content="width=device-width" />
 
    <title>Chỉnh sửa thông tin khách hàng</title>
</head>
<body>
    <section class="bg-image" <div class="mask d-flex align-items-center h-100 gradient-custom-3">
    <div class="container h-100">
      <div class="row d-flex justify-content-center align-items-center">
        <div class="col-12 col-md-9 col-lg-7 col-xl-6">
          <div class="card" style="border-radius: 15px;">
            <div class="card-body p-5">
              <h2 class="text-uppercase text-center ">Sửa thông tin tài khoản</h2>
              @using (Html.BeginForm())
              {
              @Html.ValidationSummary(true, "", new { @class = "text-danger" })
              <div>
                Tài khoản: @Model.taiKhoan1
              </div>
             
              <div  class="mt-2">
                Tên chủ tài khoản
                @Html.EditorFor(model => model.ten, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.ten, "", new { @class = "text-danger" })
              </div>
              <div  class="mt-2">
                Giới tính: @ViewBag.gt
              </div>

              <div class="mt-2">
                Số điện thoại
                @Html.EditorFor(model => model.sdt, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.sdt, "", new { @class = "text-danger" })
              </div>
              <div class="mt-2">
                Email
                @Html.EditorFor(model => model.email, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.email, "", new { @class = "text-danger" })
              </div>
              <div class="mt-2">
                Địa chỉ
                @Html.EditorFor(model => model.diaChi, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.diaChi, "", new { @class = "text-danger" })
              </div>
              <div class="mt-2">
                Ngày sinh:
                <input class="mt-2" type="date" name="ngaySinh" />
                @Html.ValidationMessageFor(model => model.ngaySinh)
              </div>
              <div class="d-flex justify-content-center align-items-center">
                <a class="btn btn-dark" href="../QLTaiKhoanKH"><i class="fa-solid fa-chevron-left"></i> Quay
                  lại</a>
                <input type="submit" value="Lưu thông tin" class="btn btn-success m-3" />
              </div>
              }

            </div>
          </div>
        </div>
      </div>
    </div>
    </div>
  </section>

</body>

</html>



